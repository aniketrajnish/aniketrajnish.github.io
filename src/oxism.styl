@import 'nib'

$helv       = 'Helvetica Neue', Helvetica, Arial, sans-serif
$serif      = Georgia, Times, 'Times New Roman', serif
$mono       = Consolas, 'Lucida Console', 'DejaVu Sans Mono', Monaco, 'Courier New', monospace
$advBold    = 'adv', $helv
$boxSize    = 26rem
$bgColor    = #625893
$cycleSpeed = 1s
$theme       = #625893
$teal       = #35d2d8
$blue       = #0baadc
$red        = #ff585a
$black      = #333

@font-face
  font-family 'adv'
  src url('../fonts/adventor-bold.eot')
  src url('../fonts/adventor-bold.eot?#iefix') format('embedded-opentype'),
      url('../fonts/adventor-bold.woff') format('woff'),
      url('../fonts/adventor-bold.ttf') format('truetype'),
      url('../fonts/adventor-bold.svg#texgyreadventorbold') format('svg')
  font-weight bold
  font-style normal


::-moz-selection
  background #444
  color #fff
  text-shadow none


::selection
  background #444
  color #fff
  text-shadow none


*
  margin 0
  padding 0
  box-sizing border-box
  -webkit-tap-highlight-color rgba(#000, 0)


html
  font-size 9px
  font-family $helv
  text-rendering optimizeLegibility
  font-smoothing antialiased


body
  background-color $bgColor
  padding 3%
  position relative


a
  outline none


h1, h2
  font-family $advBold
  letter-spacing -0.2rem
  transition color .1s ease-out
  font-size: 4.3rem

.clear
  clear both

.button, .buttons a
  display inline-block
  background-color rgba(#000, .6)
  color $bgColor
  font-size 1.8rem
  padding 0.8rem
  margin-right 1rem
  margin-bottom 1rem
  font-weight bold
  cursor pointer
  transition background-color .3s ease-out
  text-decoration none


#info, #meta
  .cover
    background-size cover


#info

  h1
    color #fff
    font-size 3.3rem
    line-height 1.1
    font-family $advBold
  h2
    color #000
    font-size 3.3rem
    line-height 1.1
    font-family $advBold

  .cover
    background-image url('../images/spider_back_9.png')
    background-color #625893 
    color #fff

  &:hover
    .cover
      background-image url('../images/spider_back_8.png')
     h1
      color #000 !important


#meta
  .cover
    background-image url('../images/spider_back_2_01.png')

    > div
      float right
      position relative
      top 50%
      transform translateY(-50%)

  &:hover
    .cover
      background-color rgba(#fff, .9) !important
      background-image url('../images/spider_back_2.gif')

  .button
    color #fff
    margin-bottom 1rem
    width 50%
    float right
    position relative
    font-size 1.8rem
    text-align right
    transition transform .2s ease-out
    background-color $theme

    &:last-child
      margin-bottom 0

    &:hover
      transform translate3d(-1rem, 0, 0)


#grid
  text-align center

  > *
    width $boxSize
    height $boxSize
    margin 1rem
    display inline-block
    perspective 100rem
    transition transform .3s ease-out
    color $theme

    > div
      width $boxSize
      height $boxSize
      overflow hidden
      outline 1px solid transparent
      background-color #fff

    &:hover
      transform scale(.95)

      .cover
        background-color rgba(#fff, .5)
        transition-duration .2s !important

      h2
        color $black


.cover, .image
  width $boxSize
  height $boxSize
  position absolute
  overflow hidden


.major
  > div
    background-color #fff
    color $black

  &:hover h2
    color transparent !important


.cover
  text-align left
  padding 1rem
  font-size 3.2rem
  line-height 1
  background-color rgba(#fff, .8)
  z-index 1
  text-transform lowercase


.image
  background-size cover


#raymarching-engine-unity-link
  .image
    background-image url('../images/raymarchingengine1.gif')

#collider-optimizer-unity-link .image
  background-image url('../images/collideroptimizer1.gif')

#shapes-dataset-generator-link .image
  background-image url('../images/datasetgenerator1.gif')

#hypercasual-games-link .image
  background-image url('../images/hypercasual1.gif')

#gamejam-entries-link .image
  background-image url('../images/gamejam0.gif')

#unity-4d-engine-link .image
  background-image url('../images/4dengine1.gif')
  background-position: center

#multi-window-sync-link .image
  background-image url('../images/multiwindowsync1.gif')
  background-position: center

#spiderverse-pp-link .image
  background-image url('../images/spiderversepp1.gif')

#trippy-pp-link .image
  background-image url('../images/trippypp1.gif')
  background-position: center

#alembic-to-fbx-link .image
  background-image url('../images/alembictofbx1.gif')
  background-position: center

#spongebob-vr-project-link .image
  background-image url('../images/spongebobvr1.gif')
  background-position: center
  
#perma
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  pointer-events none
  color #fff
  padding 0 1rem
  overflow auto
  opacity 0
  background-color rgba(240, 240, 240, .97)


.no-js #perma
  transition none !important


body.perma
  overflow hidden !important

  #perma
    opacity 1
    pointer-events auto
    overflow-scrolling touch
    z-index 99

  #grid
    pointer-events none


$permaDark = rgba(#000, .5)

#x
  text-decoration none
  font-size 9.8rem
  line-height .4
  text-align center
  position absolute
  color $black
  top 1.4rem
  right -0.7rem
  width 6rem
  height 6rem
  transition opacity .2s ease-out

  &:hover
    opacity .5


.content
  background-color #fff
  padding 4rem 2.5rem
  font-family $serif
  width 100%
  float left

  a
    color $theme
    border-bottom 5px solid #f0f0f0
    text-decoration none
    padding 0 .3rem

    &:hover
      color $teal !important

  hr
    width 100%
    margin-bottom 3rem
    border 0
    border-bottom 1px solid #ccc

  p, pre, h2, h3, ul
    margin-bottom 3rem
    color #444 !important

  ul
    padding-left 5rem

  > ul
    margin-bottom 6rem

  li
    width 100%
    font-size 2.4rem
    line-height 1.6
    margin-bottom 2rem

  h2, h3
    font-size 4rem
    line-height 1.9
    margin-bottom 1rem
    font-family: 'Playfair Display', $serif

  p
    font-size 2.4rem
    font-weight 200
    line-height 1.6

    &:last-of-type
      margin-bottom 0

    code
      padding .5rem

  code
    background-color #efefef
    font-family $mono
    font-size 1.8rem

  img
    max-width 100%


pre
  background #efefef
  padding 1.5rem
  line-height 1.5
  font-family $mono
  overflow auto


#perma-content
  margin 0 auto
  clear both
  max-width 800px
  padding 1rem 0
  padding-bottom 7rem
  position relative

  main, article
    display none

    &.active
      display block

  h1
    line-height 1
    margin-bottom 1.5rem
    font-size 6rem
    word-wrap break-word
    width 81%
    color $theme

  h2
    font-size 3.3rem
    margin-bottom 2.45rem
    line-height 1.1
    color $black
    letter-spacing -0.1rem
    max-width 60rem

  .buttons a
    font-size: 2.4rem
    color $theme
    float left
    outline .4rem solid $theme
    background-color rgba(#000, 0)
    transition color .2s ease-out, background-color .2s ease-out
    margin-left .3rem
    margin-bottom 1.3rem


    &:hover
      background-color $theme
      color #f0f0f0


.images
  margin-bottom 2.6rem
  float left

  img, video
    width 49%
    float left
    padding 1rem
    background-color #fff

    &:first-child
      margin-right 2%


.buttons
  width 100%
  float left
  margin-top .5rem
  margin-bottom 1.5rem

  :first-child
    margin-left 0


.tools
  margin 3.5rem 0
  font-family $mono
  line-height 1
  font-size 1.8rem
  letter-spacing -0.1rem
  float left
  color #999


@media only screen and (max-width 600px)
  .images
    img, video
      width 100%
      margin-bottom 1rem

      &:last-child
        margin-bottom 0

  #perma-content
    padding-bottom 15rem

    h1
      font-size 5rem

  #x
    font-size 8.2rem

  .content
    padding 1.5rem
    
.touch
  #grid > *:hover
    transform none

  .cover
    background-color rgba(#fff, .6)


#perma
  transform translate3d(0, 0, 0)
  transition opacity .15s ease-out
  z-index 1

.cover
  transition color $cycleSpeed ease-out, opacity .2s ease-out


.no-pe #perma
  display none

.no-pe body.perma #perma
  display block


#error-404
  #grid a
    background-color #fff
    text-decoration none
    color $gold
    font-size 1.7rem
    letter-spacing 0.4rem
    overflow hidden
    background-color $black

    &:hover
      transform none
      background-color #fff

    pre
      background-color transparent
      position relative
      top 50%
      transform translateY(-50%)
      
.custom-table {
    color: black
    font-size: 18px;
    width: 100%;
    border-spacing: 0;
    border-collapse: collapse;
    margin: 20px 0;
}

.custom-table td, .custom-table th {
    border: 1px solid darkgrey;
    padding: 8px 13px;
}

.custom-table th {
    background-color: #f6f8fa;
    text-align: left;
    font-weight: bold;
}

.custom-table img .custom-table video {
    width: 100%; 
    max-width: 100%;
    border: 2px solid black; 
    border-radius: 5px;     
}

.custom-table video {
    display: block;
    max-height: 100%;
}

/* Style for odd rows */
.custom-table tr:nth-child(odd) {
    background-color: #f6f8fa;
}

/* Style for even rows */
.custom-table tr:nth-child(even) {
    background-color: #ffffff;
}

.center-container {
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: $helv
  width: 75rem !important
  height: 75rem !important
}

.center-container .caption {
  font-family: $advBold;
  letter-spacing: -0.2rem;
  font-size: 4.3rem;
}

.center-container
  transition transform .3s ease-out

  &:hover
    transform scale(1.05) !important

pdf-container {
    width: 100%;
    height: 100vh; /* This makes it take up the full viewport height */
    background-color: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 10vh;
}

.pdf-container embed {
    display: block;
    width: 100%;
    height: 50vh;
    margin-bottom: 5vh;
    border: 3px solid black; 
    border-radius: 15px;   
}

.yt-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
    width: 100%;
    max-width: 100%;
}

.yt-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.flex-container {
    display: flex;
    flex-wrap: wrap;
}

nav#grid {
    display: flex;
    flex-wrap: wrap; 
    align-items: flex-start;
    justify-content: center;
}

@media only screen and (max-aspect-ratio: 10/16) {
    .flex-container {
        flex-direction: column;
    }

    nav#grid {
        flex-direction: column;
    }

    .center-container {
      width: 80vw !important
      height: auto !important
    }

    #info, #meta {
        width: 100%; /* Takes full width on portrait screens */
    }
}